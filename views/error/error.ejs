<% layout("/layouts/boilerplate") %>
<div class="container mt-4">
  <div class="alert alert-danger alert-slide-down shadow d-flex align-items-center" role="alert">
    
    <!-- Icon -->
    <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26"
      fill="currentColor" class="bi bi-exclamation-triangle-fill me-3"
      viewBox="0 0 16 16">
      <path d="M8.982 1.566a1.13 1.13 0 0 0-1.964 0L.165 13.233c-.457.778.091 1.767.982 1.767h13.706c.89 0 1.438-.99.982-1.767L8.982 1.566z"/>
      <path d="M8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5z"/>
      <path d="M8 11a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
    </svg>

    <div>
      <h5 class="mb-1">Error <%= err.statusCode || 500 %></h5>
      <p class="mb-0"><%= err.message %></p>
    </div>
  </div>
</div>

